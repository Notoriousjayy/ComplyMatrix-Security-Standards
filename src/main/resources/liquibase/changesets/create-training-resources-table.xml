<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create-training-resources-table" author="admin">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="training_resources"/>
            </not>
        </preConditions>

        <createTable tableName="training_resources">
            <column name="resource_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"
                             nullable="false"
                             primaryKeyName="pk_training_resources"/>
            </column>
            <column name="name" type="VARCHAR(100)"/>
            <column name="standard_id" type="BIGINT">
                <constraints foreignKeyName="fk_tr_standard"
                             references="standards(standard_id)"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="provider" type="VARCHAR(50)"/>
            <column name="type" type="VARCHAR(50)"/>
            <column name="url" type="VARCHAR(255)"/>
        </createTable>

        <rollback>
            <dropTable tableName="training_resources"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
