<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create-organization-standards-table" author="admin">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="organization_standards"/>
            </not>
        </preConditions>

        <createTable tableName="organization_standards">
            <column name="organization_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_os_org"
                             references="organizations(organization_id)"/>
            </column>
            <column name="standard_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_os_std"
                             references="standards(standard_id)"/>
            </column>
        </createTable>

        <addPrimaryKey
            tableName="organization_standards"
            columnNames="organization_id,standard_id"
            constraintName="pk_org_standards"/>

        <rollback>
            <dropTable tableName="organization_standards"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
